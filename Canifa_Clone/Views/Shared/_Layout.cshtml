<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Canifa Clone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>

    </style>
</head>
<body>

    <header>
        <div class="bg-light py-1 border-bottom">
            <div class="container">
                <div id="topBarCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner text-center text-secondary" style="font-size: 12px;">

                        <div class="carousel-item active" data-bs-interval="3000">
                            <span>ĐỔI HÀNG MIỄN PHÍ- TẠI TẤT CẢ CỬA HÀNG TRONG 30 NGÀY</span>
                        </div>

                        <div class="carousel-item" data-bs-interval="3000">
                            <span>THÊM VÀO GIỎ 599K ĐỂ FREESHIP</span>
                        </div>

                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#topBarCarousel" data-bs-slide="prev" style="width: 5%; justify-content: flex-start;">
                        <span class="carousel-control-prev-icon visually-hidden" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#topBarCarousel" data-bs-slide="next" style="width: 5%; justify-content: flex-end;">
                        <span class="carousel-control-next-icon visually-hidden" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>

        <div class="bg-white py-2 py-lg-3">
            <div class="container">

                <div class="row align-items-center d-none d-lg-flex">

                    <div class="col-lg-3">
                        <a href="/" class="d-block bg-danger text-white text-center fw-bold text-decoration-none"
                           style="width: 120px; height: 40px; line-height: 40px; font-size: 24px;">CANIFA</a>
                    </div>

                    <div class="col-lg-6">
                        <form action="/Product/Search" method="get">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                                <input type="text" class="form-control border-start-0 ps-0" placeholder="Tìm kiếm" name="query">
                            </div>
                        </form>
                    </div>

                    <div class="col-lg-3">
                        <div class="d-flex justify-content-end gap-3">
                            <a href="#" class="text-decoration-none text-dark text-center">
                                <i class="fa-regular fa-user fs-5 mb-1"></i><div style="font-size: 11px;">Tài khoản</div>
                            </a>
                            <a href="#" class="text-decoration-none text-dark text-center position-relative">
                                <i class="fa-solid fa-bag-shopping fs-5 mb-1"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary" style="font-size: 8px;">0</span>
                                <div style="font-size: 11px;">Giỏ hàng</div>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row align-items-center d-flex d-lg-none">
                    <div class="col-4">
                        <a href="/" class="d-block bg-danger text-white text-center fw-bold text-decoration-none"
                           style="width: 100px; height: 35px; line-height: 35px; font-size: 20px;">CANIFA</a>
                    </div>

                    <div class="col-8">
                        <div class="d-flex justify-content-end align-items-center gap-3">
                            <a href="#" class="text-dark"><i class="fa-solid fa-magnifying-glass fs-5"></i></a>

                            <a href="#" class="text-dark"><i class="fa-solid fa-video fs-5"></i></a>

                            <a href="#" class="text-dark"><i class="fa-regular fa-user fs-5"></i></a>

                            <a href="#" class="text-dark position-relative">
                                <i class="fa-solid fa-bag-shopping fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary" style="font-size: 8px;">0</span>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="bg-dark-canifa text-white">
            <div class="container">
                <ul class="nav main-menu justify-content-start">
                    <li class="nav-item">
                        @Html.ActionLink("Sản phẩm mới", "SanPhamMoi", "SanPham", null, new { @class = "nav-link text-white fw-bold text-uppercase" })
                    </li>

                    <li class="nav-item"><a href="#" class="nav-link text-white fw-bold text-uppercase">Nữ</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white fw-bold text-uppercase">Nam</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white fw-bold text-uppercase">Bé gái</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white fw-bold text-uppercase">Bé trai</a></li>
                </ul>
            </div>
        </div>
    </header>
    <div class="container-fluid p-0">
        @RenderBody()
    </div>
    <footer>
        <div class="bg-light py-5 border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center mb-4 mb-md-0">
